{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "es6"],
    "module": "commonjs",   
    "rootDir": "src",       
    "resolveJsonModule": true,
    "allowJs": true,          
    "outDir": "build",        
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,    
    "strict": true,                              
    "noImplicitAny": true,                               
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
